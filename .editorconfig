# EditorConfig helps developers define and maintain consistent coding styles

root = true

# --- 기본 설정 ---
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# 들여쓰기
indent_style = space
indent_size = 4

# --- Python 파일 ---
[*.py]
max_line_length = 100

# --- HTML, CSS, JS ---
[*.{html,css,js}]
indent_size = 2

# --- YAML / JSON ---
[*.{yml,yaml,json}]
indent_size = 2

# --- Markdown ---
[*.md]
trim_trailing_whitespace = false

# --- 환경변수 파일 ---
[*.env]
insert_final_newline = true
end_of_line = lf
